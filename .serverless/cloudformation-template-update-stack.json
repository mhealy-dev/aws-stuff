                  ]
                },
                {
                  "Effect": "Allow",
                  "Action": [
                    "logs:PutLogEvents"
                  ],
                  "Resource": [
                    {
                      "Fn::Sub": "arn:${AWS::Partition}:logs:${AWS::Region}:${AWS::AccountId}:log-group:/aws/lambda/aws-stuff-dev*:*:*"
                    }
                  ]
                }
              ]
            }
          }
        ],
        "Path": "/",
        "RoleName": {
          "Fn::Join": [
            "-",
            [
              "aws-stuff",
              "dev",
              {
                "Ref": "AWS::Region"
              },
              "lambdaRole"
            ]
          ]
        }
      }
    },
    "GenerateLiFileLambdaFunction": {
      "Type": "AWS::Lambda::Function",
      "Properties": {
        "Code": {
          "S3Bucket": {
            "Ref": "ServerlessDeploymentBucket"
          },
          "S3Key": "serverless/aws-stuff/dev/1679980942536-2023-03-28T05:22:22.536Z/GenerateLiFile.zip"
        },
        "Handler": "handler.generate",
        "Runtime": "python3.9",
        "FunctionName": "aws-stuff-dev-GenerateLiFile",
        "MemorySize": 512,
        "Timeout": 6,
        "Tags": [
          {
            "Key": "Project",
            "Value": "aws stuff"
          },
          {
            "Key": "ApplicationName",
            "Value": "aws-stuff"
          },
          {
            "Key": "ApplicationOwner",
            "Value": "Michael healy"
          },
          {
            "Key": "AppOwnerEmail",
            "Value": "mdhealy.dev@gmail.com"
          },
          {
            "Key": "Environment",
            "Value": "dev"
          },
          {
            "Key": "Country",
            "Value": "USA"
          },
          {
            "Key": "Tier",
            "Value": "Application"
          },
          {
            "Key": "BillTo",
            "Value": ""
          }
        ],
        "Environment": {
          "Variables": {
            "STAGE": "dev",
            "BUCKET_NAME": {
              "Ref": "MyBucket"
            }
          }
        },
        "Role": {
          "Fn::GetAtt": [
            "IamRoleLambdaExecution",
            "Arn"
          ]
        }
